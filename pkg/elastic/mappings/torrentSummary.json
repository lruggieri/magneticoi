{
  "settings": {
    "analysis": {
      "filter": {
        "edge_ngram_filter": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 20
        },
        "english_stop":{
          "type":"stop",
          "stopwords":"_english_"
        }
      },
      "analyzer": {
        "edge_ngram_analyzer": {
          "type": "custom",
          "tokenizer": "punctuation",
          "filter": [
            "lowercase",
            "edge_ngram_filter"
          ]
        },
        "lower_stop": {
          "type":"custom",
          "tokenizer":"punctuation",
          "filter":[
            "lowercase",
            "english_stop"
          ]
        },
        "lower": {
          "type":"custom",
          "tokenizer":"standard",
          "filter":[
            "lowercase"
          ]
        }
      },
      "tokenizer": {
        "punctuation": {
          "type": "pattern",
          "pattern": "[ .,!?_\\[\\]_]"
        }
      },
      "normalizer": {
        "lowercase_normalizer": {
          "type": "custom",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "infoHash": {
        "type": "keyword"
      },
      "name": {
        "type": "text",
        "analyzer": "lower_stop",
        "fields": {
          "raw": {
            "type": "keyword"
          },
          "suggest": {
            "type": "text",
            "analyzer": "edge_ngram_analyzer",
            "search_analyzer": "standard"
          }
        }
      },
      "files": {
        "properties": {
          "size": {
            "type": "long"
          },
          "path": {
            "type": "keyword"
          }
        }
      },
      "totalSize": {
        "type": "long"
      },
      "lastDiscovered": {
        "type": "date",
        "format": "epoch_second"
      }
    }
  }
}